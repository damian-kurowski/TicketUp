{% extends 'base.html.twig' %}

{% block title %}Logowanie - TicketUp{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Logowanie</h1>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 alert alert-info">
                        Jesteś zalogowany jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
                    </div>
                {% else %}

                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="name@example.com">
                        <label for="inputEmail">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Hasło">
                        <label for="inputPassword">Hasło</label>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="w-100 btn btn-lg btn-primary" type="submit">
                        Zaloguj się
                    </button>

                    <p class="mt-3 text-center">
                        Nie masz konta? <a href="{{ path('app_register') }}">Zarejestruj się!</a>
                    </p>
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}