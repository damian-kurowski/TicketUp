{% extends 'base.html.twig' %}

{% block title %}Edytuj Typ Biletu dla: {{ event.name }} - Admin{% endblock %}

{% block body %}
    <h1 class="mb-4">Edytuj Typ Biletu: {{ ticket_type.name }} (Wydarzenie: <a href="{{ path('app_admin_event_show', {'id': event.id}) }}">{{ event.name }}</a>)</h1>

    {{ include('admin/ticket_type/_form.html.twig', {'button_label': 'Zapisz zmiany'}) }}

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_admin_ticket_type_index', {'event_id': event.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Wróć do listy typów biletów
        </a>
        {{ include('admin/ticket_type/_delete_form.html.twig', {'tt': ticket_type, 'event': event }) }}
    </div>
{% endblock %}