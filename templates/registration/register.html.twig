{% extends 'base.html.twig' %}

{% block title %}Rejestracja - TicketUp{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Rejestracja</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.firstName, {'label': 'Imię (opcjonalnie)'}) }}
            {{ form_row(registrationForm.lastName, {'label': 'Nazwisko (opcjonalnie)'}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Hasło'
            }) }}

            <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Zarejestruj się</button>

            <p class="mt-3 text-center">
                Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się!</a>
            </p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}